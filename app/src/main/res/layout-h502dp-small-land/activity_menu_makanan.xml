<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/back"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/pilihanMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageMakanan1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sate"
                        ></com.google.android.material.imageview.ShapeableImageView>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageMakanan1"
                        android:layout_toLeftOf="@id/buttonMinus1"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:paddingLeft="10dp"
                            android:text="Sate Ayam"
                            android:textSize="15dp"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text1"
                            android:textColor="@android:color/black"
                            android:paddingLeft="10dp"
                            android:text="Harga Rp. 20.000"
                            android:textSize="15dp"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                    </RelativeLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMinus1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/value1"
                        android:layout_centerVertical="true"
                        android:padding="0dp"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        ></com.google.android.material.button.MaterialButton>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/buttonPlus1"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textAlignment="center"
                        ></com.google.android.material.textfield.TextInputEditText>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPlus1"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="0dp"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:text="+"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        ></com.google.android.material.button.MaterialButton>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pilihanMenu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@id/pilihanMenu"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/menuLocation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageMakanan2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ayam"
                        ></com.google.android.material.imageview.ShapeableImageView>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageMakanan2"
                        android:layout_toLeftOf="@id/buttonMinus2"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:paddingLeft="10dp"
                            android:text="Ayam Panggang"
                            android:textSize="15dp"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text2"
                            android:textColor="@android:color/black"
                            android:paddingLeft="10dp"
                            android:text="Harga Rp. 50.000"
                            android:textSize="15dp"
                            android:textAppearance="?attr/textAppearanceHeadline6" />
                    </RelativeLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMinus2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/value2"
                        android:layout_centerVertical="true"
                        android:padding="0dp"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:text="-"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        ></com.google.android.material.button.MaterialButton>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/buttonPlus2"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textAlignment="center"
                        ></com.google.android.material.textfield.TextInputEditText>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonPlus2"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="0dp"
                        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                        android:text="+"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        ></com.google.android.material.button.MaterialButton>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pilihanMenu2"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:text="Order Payment" />
    </RelativeLayout>
